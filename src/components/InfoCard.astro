---
import { Image } from "astro:assets";
import fg from "fast-glob";

interface Props {
  title: string;
  description: string;
  imageName?: string;
}

let currentImg = "";
const { title, description, imageName } = Astro.props;
---

<li class="link-card">
  <h2 class="text-blue-300">
    {title}
    <span>&rarr;</span>
  </h2>
  <p>
    {description}
  </p>
  <img src={currentImg} alt="" />
</li>
<style>
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
