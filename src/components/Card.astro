---
import { Image, imageConfig } from "astro:assets";
import post from "../assets/img/post/first_post.jpg";
import aboutUsImg from "../assets/img/post/aboutUsImg.png";
import fg from "fast-glob";

interface Props {
  title: string;
  date: string;
  description?: string;
  imgsrc: string;
  imgalt: string;
  href?: string;
}

const { title, date, description, imgsrc, imgalt, href } = Astro.props;

const images = await Astro.glob("../assets/img/post/*");
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <h5 class="text-blue-300">
      Published {date}
    </h5>
    <Image src={post} alt={imgalt} width={512} height={512} />
    <p>
      {description}
    </p>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
